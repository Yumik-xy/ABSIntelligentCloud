<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_white_radius_16"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/dimen_64"
            android:layout_height="@dimen/dimen_64"
            android:background="@drawable/shape_oval_primary"
            android:backgroundTint="@color/secondary_yellow">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TIPS"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="修改密码"
            android:textColor="@color/text_1"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:background="@drawable/item_secondary_yellow_edit_bottom_line"
            android:hint="请输入旧密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/text_1"
            android:textColorHint="@color/text_2"
            android:textCursorDrawable="@drawable/item_text_cursor_secondary_yellow"
            android:textSize="@dimen/text_14" />

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:background="@drawable/item_secondary_yellow_edit_bottom_line"
            android:hint="请输入新密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/text_1"
            android:textColorHint="@color/text_2"
            android:textCursorDrawable="@drawable/item_text_cursor_secondary_yellow"
            android:textSize="@dimen/text_14" />

        <EditText
            android:id="@+id/checkPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:background="@drawable/item_secondary_yellow_edit_bottom_line"
            android:hint="请再次输入新密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/text_1"
            android:textColorHint="@color/text_2"
            android:textCursorDrawable="@drawable/item_text_cursor_secondary_yellow"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/dimen_16"
            android:background="@drawable/item_grey_ripple_button_16"
            android:text="取消"
            android:textColor="@color/background"
            android:textSize="@dimen/text_14" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/dimen_16"
            android:background="@drawable/item_secondary_yellow_ripple_button_16"
            android:text="确认"
            android:textColor="@color/background"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

</LinearLayout>