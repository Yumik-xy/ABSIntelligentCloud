<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_white_radius_16"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="版本更新"
        android:textColor="@color/text_1"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

    <com.yumik.scrollview.ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:overScrollMode="never"
        android:paddingStart="@dimen/dimen_16"
        android:paddingEnd="@dimen/dimen_16"
        app:maxHeight="120dp">

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:text="新增了自动更新功能；\n允许页面滚动\n\n请升级版本进行体验吧"
            android:textColor="@color/text_1"
            android:textSize="@dimen/text_14" />

    </com.yumik.scrollview.ScrollView>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_8"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="0.00Mb/s"
            android:textColor="@color/text_2"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_4"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:ellipsize="start"
            android:gravity="center"
            android:singleLine="true"
            android:text="等待中..."
            android:textColor="@color/text_2"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/progressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@color/text_2"
            android:textSize="@dimen/text_12" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/dimen_16"
            android:background="@drawable/item_grey_ripple_button_16"
            android:text="取消"
            android:textColor="@color/background"
            android:textSize="@dimen/text_14" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/dimen_16"
            android:background="@drawable/item_primary_ripple_button_16"
            android:enabled="false"
            android:text="请求中"
            android:textColor="@color/background"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

</LinearLayout>