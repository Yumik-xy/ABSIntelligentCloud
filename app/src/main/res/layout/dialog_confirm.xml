<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_white_radius_16"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/dimen_64"
            android:layout_height="@dimen/dimen_64"
            android:background="@drawable/shape_oval_primary"
            android:backgroundTint="@color/secondary_red">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TIPS"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/text_1"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="副标题副标题副标题副标题副标题"
            android:textColor="@color/text_2"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/dimen_16"
            android:background="@drawable/item_grey_ripple_button_16"
            android:text="取消"
            android:textColor="@color/background"
            android:textSize="@dimen/text_14" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/dimen_16"
            android:background="@drawable/item_secondary_red_ripple_button_16"
            android:text="确认"
            android:textColor="@color/background"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

</LinearLayout>