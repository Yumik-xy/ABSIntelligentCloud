    <item android:state_focused="false">
        <layer-list>
            <item android:bottom="2dp" android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <!--                    <solid android:color="@color/whiteLight" />-->
                    <stroke android:width="1dp" android:color="@color/black" />
